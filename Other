setupProxy <- function () 
{
    Sys.setenv(http_proxy = "http://10.2/", http_proxy_user = "ask")
    if (version$major <= 3 && version$minor < 3) {
        utils::setInternet2(FALSE)
    }
    else if (version$major >= 3 && version$minor >= 3) {
        options(download.file.method = "internal")
    }
    else {
        warning("unknown version number: ", version$major, ".",
            version$minor)
    }
}
 
setupProxy()
